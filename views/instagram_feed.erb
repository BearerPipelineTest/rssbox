<%- content_type :atom -%>
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <id>instagram:<%= @user_id %></id>
  <title><%= @title %></title>
  <icon>https://www.instagram.com/favicon.ico</icon>
  <link href="<%= request.original_url.esc %>" rel="self" />
  <link href="https://www.instagram.com/<%= @user %>" rel="alternate" />
  <updated><%= Time.at(@data["media"]["nodes"][0]["date"]) if @data["media"]["nodes"][0] %></updated>
<%-
if @data["is_private"] and @data["media"]["nodes"].empty?
  reason = params[:sessionid] ? "The sessionid token is no longer valid." : "This user is private."
-%>

  <entry>
    <id>instagram:user:<%= @user %><%= ":#{params[:cachebuster]}" if params[:cachebuster] %></id>
    <title><%= reason %></title>
    <link href="https://www.instagram.com/<%= @user %>/" />
    <updated></updated>
    <author><name><%= @data["full_name"] %></name></author>
    <content type="html"><%= reason %></content>
  </entry>
<%- else -%>
<%-
@data["media"]["nodes"].each do |post|
  if !post["nodes"]
    post["display_url"] = post["display_src"] if post["display_src"]
    post["nodes"] = [post]
  end
-%>

  <entry>
    <id>instagram:post:<%= post["id"] %><%= ":#{params[:cachebuster]}" if params[:cachebuster] %></id>
    <title><%= "Video: " if post["is_video"] %><%= post["caption"].to_line.esc rescue "No title" %></title>
    <link href="https://www.instagram.com/p/<%= post["code"] %>/" />
    <updated><%= Time.at(post["date"]) %></updated>
    <author><name><%= @data["full_name"].esc %></name></author>
    <content type="html">
<%=
if post["is_video"]
  <<-EOF.undent.esc
    <iframe width="612" height="710" src="https://www.instagram.com/p/#{post["code"]}/embed/" frameborder="0" scrolling="no" allowfullscreen referrerpolicy="no-referrer"></iframe>
  EOF
end
%>
<%=
post["nodes"].select { |node| !node["is_video"] }.map do |node|
  <<-EOF.undent.esc
    <img src="#{node["display_url"]}" referrerpolicy="no-referrer">
  EOF
end.join("\n")
%>
<%= post["caption"].linkify.to_paragraphs.esc %>
<%=
<<-EOF.undent.esc
  <p><a href="#{request.root_url}/?download=#{CGI.escape("https://www.instagram.com/p/#{post["code"]}/")}">Download with nice filename</a></p>
EOF
-%>
    </content>
  </entry>
<%- end -%>
<%- end -%>
</feed>
